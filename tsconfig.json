{
  "compilerOptions": {
    "rootDir": "./lib",
    "baseUrl": ".",
    "outDir": "./dist",
    "lib": [
      "ES2022",
      "DOM",
    ],
    "module": "ES2022",
    "target": "ES2022",
    "composite": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "paths": {
      "~/*": ["./lib/*"],
      "@types/*": ["./lib/types/*"],
      "@tests/*": ["./tests/*"],
    },
  },
  "include": [
    "./lib/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}